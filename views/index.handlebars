<div class="header-container">
	<h1>EAT-DA-BURGER!</h1>
	<img src="./assets/img/burger.png">
</div>

<div class="container">
	<div class="row">
		<section id="burgersNotDevoured">
		<h2>Burgers To Be Devoured!</h2>
			{{#each burgers}}
				{{#unless this.devoured}}
					<li>
						<span class="burgers">
							{{this.id}}. {{this.burger_name}}
						</span>
						<span id="devourButton">
							<form action="/{{this.id}}?_method=PUT" method="POST">
								<input type="hidden" name="devoured" value="true">
								<button class="devour-button" type="submit">Devour It!</button>
							</form>
						</span>
					</li>
				{{/unless}}
			{{/each}}
	</section>
	<section id="burgersDevoured">
		<h2>Burgers Devoured!</h2>
			{{#each burgers}}
				{{#if this.devoured}}
					<li class="devouredBurgers">
						{{this.id}}. {{this.burger_name}}
					</li>
				{{/if}}
			{{/each}}
	</section>
	</div>
	<div class="row">
		<section id="newBurger">
		<h2>Type In A Burger To Be Devoured! Click the Submit Button When You Are Finished!</h2>
		<form class="create-update-form" action="/" method="POST">
			<div class="form-group">
				<textarea id="newBurgerText" name="burger_name" rows="5"></textarea>
			</div>
			<button class="btn btn-primary" type="submit">Submit</button>
		</form>
		</section>
	</div>
</div>

